@model RegisterFormModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register | YouVideo</title>
    <link rel="stylesheet" href="~/assets/sources/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.min.css" />
    <link rel="shortcut icon"
          href="~/assets/icons/favicon.ico"
          type="image/x-icon" />
</head>
<body>
    <!-- register start -->
    <section id="register">
        <div class="container register-container">
            <div class="row register-row">
                <div class="col-10 col-xl-8 col-lg-8 col-md-10 col-sm-10 register-col">
                    <div class="row register-col-row">
                        <div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 register-left-side">
                            <div class="img-div">
                                <img src="~/assets/images/auth/login-register.png"
                                     alt="Login Img" />
                            </div>
                        </div>
                        <div class="col-xl-7 col-lg-7 col-md-7 col-sm-12 register-right-side">
                            <h3 class="register-side-heading">Register</h3>
                            <p class="register-side-description">
                                Welcome back! Create Your Account.
                            </p>
                            <form id="login-side-form" method="post" asp-action="Register">
                                <div class="form-group username-form-group">
                                    <label asp-for="Username">Username</label>
                                    <input id="username-input"
                                           asp-for="Username"
                                           class="form-control"
                                           placeholder="Enter username" />
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group email-address-form-group">
                                    <label asp-for="Email">Email address</label>
                                    <input id="email-address-input"
                                           asp-for="Username"
                                           class="form-control"
                                           placeholder="Enter email" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group password-form-group">
                                    <label asp-for="Password">Password</label>
                                    <input id="password-input"
                                           asp-for="Username"
                                           type="password"
                                           class="form-control"
                                           placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group repeat-password-form-group">
                                    <label asp-for="PasswordConfirm">Repeat password</label>
                                    <input id="password-input"
                                           asp-for="PasswordConfirm"
                                           type="password"
                                           class="form-control"
                                           placeholder="Repeat Password" />
                                    <span class="text-danger" asp-validation-for="PasswordConfirm"></span>
                                </div>
                                <div class="register-side-btn-div">
                                    <button type="submit" class="register-side-btn">Register</button>
                                </div>
                                <a asp-action="SignIn" class="link-to-login">Have an account? Log In</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- register end -->

    <script src="~/libs/jquery/jquery.min.js"></script>
    <script src="~/libs/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
